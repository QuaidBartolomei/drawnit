{
  "name": "drawnit-server",
  "version": "1.0.0",
  "description": "",
  "main": "./src/main.js",
  "scripts": {
    "start": "npm run serve",
    "postinstall": "npm run client:install",
    "serve": "NODE_PATH=./dist node dist/main.js",
    "test": "concurrently  \"npm run server:test\" \"npm run client:test\" ",
    "dev": "concurrently  \"npm run server:dev\" \"npm run client:dev\" ",
    "server:test": "jest --watchAll",
    "client:test": "concurrently  \"npm run server:dev\" \"cd client && yarn test\" ",
    "client:install": "cd client && yarn",
    "server:dev": "NODE_PATH=./src ts-node-dev ./src/main.dev.ts --debug",
    "client:dev": "cd client && yarn start",
    "client:build": "cd client && yarn && yarn run build",
    "server:build": "tsc --project tsconfig.prod.json"
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.3.4",
    "@types/supertest": "^2.0.11",
    "@types/body-parser": "^1.19.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-jwt": "0.0.42",
    "@types/express-mongo-sanitize": "^1.3.2",
    "@types/jest": "^26.0.24",
    "@types/mongodb": "^3.6.20",
    "@types/multer": "^1.4.7",
    "@types/node": "^14.17.12",
    "@types/serve-favicon": "^2.5.3",
    "@types/shortid": "0.0.29",
    "axios": "^0.21.2",
    "jest": "26.6.0",
    "mongodb-memory-server": "^6.9.6",
    "socket.io-client": "^3.1.3",
    "supertest": "^6.1.6",
    "ts-jest": "^26.5.6",
    "concurrently": "^5.3.0",
    "ts-node-dev": "^1.1.8"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.6.0",
    "express": "^4.17.1",
    "express-jwt": "^6.1.0",
    "express-jwt-authz": "^2.4.1",
    "express-mongo-sanitize": "^2.1.0",
    "image-size": "^1.0.0",
    "jwks-rsa": "^1.12.3",
    "mongodb": "^3.6.11",
    "mongoose": "^5.13.9",
    "multer": "^1.4.3",
    "serve-favicon": "^2.5.0",
    "shortid": "^2.2.16",
