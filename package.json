{
  "name": "drawnit",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "Quaid Bartolomei",
  "main": "server/src/main.js",
  "scripts": {
    "build": "npm run server:build && npm run client:build",
    "client": "cd client && npm run start",
    "client:build": "cd client && npm ci --production=false && npm run build && npm prune --production",
    "client:dev": "cd client && npm run dev",
    "client:e2e": "cd client && npm run test-e2e",
    "client:install": "cd client && npm ci",
    "client:integration": "start-server-and-test client:dev http://localhost:3000 client:e2e",
    "client:lint": "cd client && npm run lint",
    "client:lint-selected": "cd client && npm run lint:fix-selected",
    "client:test": "npm run client:unit && npm run test:integration",
    "client:unit": "cd client && npm run test-unit -- --silent",
    "dev": "start-server-and-test server:dev http://localhost:4000/test client",
    "format": "prettier ./ --ignore-unknown --write --check",
    "full-install": "npm ci && npm run server:install && npm run client:install",
    "lint": "npm run client:lint && npm run server:lint",
    "prepare": "husky install",
    "server": "cd server && npm start",
    "server:build": "cd server && npm ci --production=false && npm run build && npm prune --production",
    "server:ci": "cd server && npm run test:ci",
    "server:dev": "cd server && npm run dev",
    "server:install": "cd server && npm ci",
    "server:lint": "cd server && npm run lint",
    "server:lint-selected": "cd server && npm run lint:fix-selected",
    "server:test": "cd server && npm run test -- --ci --silent",
    "start": "npm run server",
    "test:all": "npm run server:test && npm run client:test",
    "test:integration": "start-server-and-test dev http://localhost:3000 client:e2e"
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "prettier": "2.5.0",
    "sort-package-json": "^1.53.1",
    "start-server-and-test": "^1.14.0"
  },
  "engines": {
    "node": "^16"
  }
}
